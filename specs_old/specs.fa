-> un langage transcompilé en C++

Hero is Component					--> set('Hero', '{}', 'Component')
{									--> enterScope('Hero')
	number strength = 10			--> set('strength', 'number', 10)
	[Companion] companions			--> set('companions', '[Companion]')

	private {
		name = ""
	}

	new						--> set('new', 'function', 'void')
	{								
		if name == 'Hello'
			echo.error "Hello à toi aussi !"
	}
	--> {
		if (get('name') == 'Hello')
			get('Console').log("Hello à toi aussi !")
	}

	string name = "hey"
	get name => private.name + "coco"
	set name => private.name = val
}


